{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Linux",
            "type": "shell",
            "command": "make -f linux/Makefile OPTIMIZE=\"-O0 -g\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ]
            }
        },
        {
            "label": "Clean Linux",
            "type": "shell",
            "command": "make -f linux/Makefile clean",
            "problemMatcher": []
        }
    ]
}